<Window x:Class="LANchat.ExceptionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LANchat"
        mc:Ignorable="d"
        Title="{}{Title}" Height="150" Width="250" Topmost="True" ResizeMode="NoResize" Icon="/error.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Button Content="OK" HorizontalAlignment="Right" Margin="5,5,5,5" Grid.Row="1" VerticalAlignment="Center" Height="25" Width="50" Click="CloseDialog"/>
        <TextBlock x:Name="ExceptionMessage" Text="{}{Message}" Margin="5,5,5,5" TextWrapping="WrapWithOverflow" ScrollViewer.CanContentScroll="True"/>

    </Grid>
</Window>
